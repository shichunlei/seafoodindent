<resources>

    <style name="AppBaseTheme" parent="android:Theme.Light"></style>

    <style name="AppTheme" parent="@android:style/Theme.NoTitleBar"></style>

    <style name="listview">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:cacheColorHint">@color/transparent</item>
        <item name="android:headerDividersEnabled">@color/transparent</item>
        <!-- <item name="android:scrollbars">none</item> -->
        <item name="android:divider">@color/bgc_line</item>
        <item name="android:dividerHeight">0.5dp</item>
    </style>

    <style name="LoadingProgress" parent="android:Widget.ProgressBar">
        <item name="android:minWidth">50dp</item>
        <item name="android:maxWidth">50dp</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:maxHeight">50dp</item>
    </style>

    <!-- 对话框风格 -->
    <style name="CustomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

    <style name="CustomProgressDialog" parent="@style/CustomDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

</resources>